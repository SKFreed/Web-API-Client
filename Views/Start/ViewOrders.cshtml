@model List<DataOrdersResponse>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders by  @Model[0].userEmail </h1>
@*<ul>
@foreach (var item in Model)
{
    <li>@Html.DisplayFor(modelItem => item.name)</li>
}
</ul>*@

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Цена</th>
            <th>Дата изменения</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.updatedDate)
            </td>
            <td>
                @{
        var parms = new Dictionary<string, string?>
            {
                { "email", item.userEmail },
                { "idstring", item.id.ToString() }
            };
}

                <a asp-controller="Start" asp-action="EditOrder" asp-all-route-data="parms">Изменить</a>
              @*  <a asp-controller="Start" asp-action="DeleteUser" asp-route-id="@item.UserEmail">Удалить</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
