<a class="btn btn-primary" asp-controller="Start" asp-action="PostUser">Добавить</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>E-Mail</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                <a asp-controller="Start" asp-action="EditUser" asp-route-email="@item.email">Изменить</a> |
                <a asp-controller="Start" asp-action="ViewOrders" asp-route-email="@item.email">Заказы</a> |
                <a asp-controller="Start" asp-action="DeleteUser" asp-route-email="@item.email">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>